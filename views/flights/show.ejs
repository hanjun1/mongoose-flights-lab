<%- include('../partial/header') %>
    <div class="destinations-container">
        <% if (flight.destinations.length == 0) { %> 
            <p>No available destinations.</p>
        <% } else { %>
            <table>
                <thead>
                    <th>Airport</th>
                    <th>Arrival Time</th>
                    <th>Delete?</th>
                </thead>
                <tbody>
                    <% for (let destination of flight.destinations) { %> 
                        <tr>
                            <td><%= destination.airport %></td>
                            <td><%= destination.arrival %></td>
                            <td><form action="/flights/<%= flight.id %>/destination/<%= destination.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn waves-effect waves-light">DELETE</button>
                            </form></td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
        <% } %> 
    </div>
    <div class="form-container">
      <form action="/flights/<%= flight.id %>/destination" method="POST">
        <div class="row">
          <div class="input-field">
              <% let usedAirports = []; %>
              <% usedAirports.push(flight.airport); %> 
              <% for (let destination of flight.destinations) { %> 
                <% usedAirports.push(destination.airport); %> 
              <% } %> 
            <select name="airport">
              <option value="" disabled selected>Choose Option</option>
              <% if (!usedAirports.includes("AUS")) { %> 
              <option value="AUS">AUS</option>
              <% } %> 
              <% if (!usedAirports.includes("DFW")) { %> 
              <option value="DFW">DFW</option>
              <% } %> 
              <% if (!usedAirports.includes("DEN")) { %> 
              <option value="DEN">DEN</option>
              <% } %> 
              <% if (!usedAirports.includes("LAX")) { %> 
              <option value="LAX">LAX</option>
              <% } %> 
              <% if (!usedAirports.includes("SAN")) { %> 
              <option value="SAN">SAN</option>
              <% } %> 
            </select>
            <label for="airport">Airport:</label>
          </div>
        </div>
        <div class="row">
          <label for="arrival">Arrival</label>
          <div class="input-field">
            <input type="datetime-local" name="arrival" />
          </div>
        </div>
        <div class="row">
          <div class="button-container">
            <button class="btn waves-effect waves-light" type="submit">
              Add Destination</i>
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="ticket-container">
      <% if (tickets.length == 0) { %> 
        <p>No tickets currently sold for this flight.</p>
      <% } else { %> 
        <table>
          <thead>
            <th>Seat</th>
            <th>Price</th>
          </thead>
          <tbody>
            <% for (let ticket of tickets) { %> 
              <tr>
                <td><%= ticket.seat %></td>
                <td><%= ticket.price %></td>
              </tr>
            <% } %> 
          </tbody>
        </table>
      <% } %> 
    </div>
    <div class="button-container">
      <a href="/flights/<%= flight.id %>/ticket/new"><button class="btn waves-effect waves-light">New Ticket</button></a>
    </div>
<%- include('../partial/footer') %>