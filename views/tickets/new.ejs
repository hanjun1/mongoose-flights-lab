<%- include("../partial/header") %>

<div class="form-container">
  <form action="/flights/<%= flight.id%>/ticket" method="POST">
    <div class="row">
      <div class="input-field">
        <input type="text" name="seat" />
        <label for="seat">Seat</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <input
          type="number"
          min="0.00"
          step="0.01"
          name="price"
          placeholder="0.00"
        />
        <label for="price">Price</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="flight">
          <option value="" disabled selected>Choose a flight:</option>
          <% for( let destination of flight.destinations ) { %>
          <option value="<%= flight.id%>"><%= destination.airport %></option>
          <% } %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <button class="btn waves-effect waves-light">Add Ticket</button>
      </div>
    </div>
  </form>
</div>

<%- include("../partial/footer") %>
